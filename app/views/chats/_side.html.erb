<div class="w-64 p-4 h-screen text-white bg-blue-800 sticky top-0">
  <div class="">
    <%= form_with(model: Chat.new) do |f| %>
      <%= f.submit 'New Question', class: "text-white hover:text-blue-700 end-2.5 bottom-2 top-2 bg-gray-700 hover:bg-white border border-white hover:border-bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"%>
    <% end %>
    <div class="mt-3">
      <h4>Today: </h4>
      <turbo-frame id="user-chats">
        <%= render partial: 'chats/chat_list', collection: current_user.chats.reverse if current_user %>
      </turbo-frame>
    </div>


  </div>
</div>